{
    auto_https off
    log {
        output stdout
        format console
    }
}

# Internal traffic from mesh-router tunnel (HTTP)
:80 {
    reverse_proxy casaos:8080
}

# Direct access port with TLS (for mesh-router-agent direct IP routing)
# Uses certificate obtained from mesh-router-backend CA
:10443 {
    log
    tls /certs/cert.pem /certs/key.pem
    reverse_proxy casaos:8080
}
